window.onload = function() {
  const palettes = {
    matrix: ['#00ff66', '#0aff0a', '#003300', '#ffffff'],
    cyberpunk: ['#ff003c', '#ff6b6b', '#ffb347', '#00ffff', '#ffffff'],
    hacker: ['#00ff9c', '#00e0ff', '#f8f9fa', '#ff1744', '#ffee00'],
    neon: ['#39ff14', '#00ffff', '#ff00ff', '#ffffff'],
    classic: ['#f8f9fa', '#ced4da', '#868e96', '#74c0fc', '#4dabf7'],
    redteam: ['#ff003c', '#ff6b6b', '#ffb347', '#ffffff', '#00ff9c']
  };

  const paletteName = '{{ page.particle_palette | default: "redteam" }}';
  const colors = palettes[paletteName] || palettes['redteam'];

  Particles.init({
    selector: '.particles',
    color: colors
  });
};